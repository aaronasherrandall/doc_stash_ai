<div class="container">
  <div class="leftside">
    <div class="cards-container">
      <h1>Your DocStash</h1>
      <h5>Filter here</h5>
      <div class="cards">
        <% @docs.each do |doc| %>
          <div class="card">
            <%= doc.file_name %>
            <p>Description</p>
            <div class="new-chat-button">
              <%= link_to "New Chat", new_chat_path, class: "btn btn-warning btn-new-chat" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="doc-upload">
      <h1>Add to Your DocStash</h1>
        <%= render "shared/doc-upload" %>
    </div>
  </div>

  <div class="rightside">
    <%= render "shared/chats" %>
  </div>
</div>
